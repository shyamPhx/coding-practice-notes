//defining or declaring
function getCall() {
  //body of the function
  console.log("Welcome to function");
  alert("Welcome to function");\
  
}

// FUnction calling or invoking
getCall();


//create a function with name sayWelcome()

function sayWelcome(name) {
  console.log("Hi. i am " + name);
}

//call this function
sayWelcome("Ajay");
sayWelcome("Sathwick");
sayWelcome("sanuja");
sayWelcome("Guvi");

// COde reusability



function calculate_Addition(number1, number2) {
  //logic
  let add = number1 + number2;
  let mul = number1 * number2;
  let div = number1 / number2;
  let mod = number1 % number2;
  //   print;
  console.log(add, mul, div, mod);
  //   console.log(mul);
  //   console.log(div);
  //   console.log(mod);
}

calculate_Addition(5, 10);
calculate_Addition(50, 100);
calculate_Addition(100, 200);




